<Window x:Class="Subasta.Licita"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Subasta"
        mc:Ignorable="d"
        Title="Licita" Height="450" Width="800" Background="#FFCBCB">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Nom " Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Background="#D9D7F1"/>
        <TextBox x:Name="txtNom" FontSize="35" Grid.Row="1" Margin="20" Background="#D9D7F1"/>
        <TextBlock Text="Quantitat" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Background="#D9D7F1"/>
        <TextBox x:Name="txtQuantitat" FontSize="35" Grid.Row="3" Margin="20" Background="#D9D7F1"/>
        <Button Content="Tanca" x:Name="btnTanca" Click="btnTanca_Click" Background="#D9D7F1" Grid.Row="4" Margin="20" FontSize="25"/>


    </Grid>
</Window>
