<Window x:Class="Parelles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Parelles"
        mc:Ignorable="d"
        Title="Parelles" Height="450" Width="800" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Joc de les Parelles" Grid.Row="0" Grid.ColumnSpan="3" FontSize="50" HorizontalAlignment="Center" />
        <Button Content="2x2" Click="btnPerDos_Click" x:Name="btnPerDos" Grid.Row="1" Grid.Column="1" Margin="10" FontSize="35"/>
        <Button Content="4x4" Click="btnPerQuatre_Click" x:Name="btnPerQuatre" Grid.Row="2" Grid.Column="1" Margin="10" FontSize="35"/>
        <Button Content="6x6" Click="btnPerSis_Click" x:Name="btnPerSis" Grid.Row="3" Grid.Column="1" Margin="10" FontSize="35"/>
    </Grid>
</Window>
