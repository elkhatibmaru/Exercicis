<Window x:Class="Subasta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Subasta"
        mc:Ignorable="d"
        Title="Subasta" Height="450" Width="800" Background="#D9D7F1" FontSize="35">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Preu Base" Grid.Row="0" Grid.Column="1" Margin="20" Background="#FFFDDE" x:Name="btnPreuBase" Click="btnPreuBase_Click"/>
        <Button Content="Licita" Grid.Row="1" Grid.Column="1" Margin="20" Background="#FFFDDE" x:Name="btnLicita" Click="btnLicita_Click"/>
        <Button Content="Resultat"  Grid.Row="2" Grid.Column="1" Margin="20" Background="#FFFDDE" x:Name="btnResultat" Click="btnResultat_Click"/>
    </Grid>
</Window>
